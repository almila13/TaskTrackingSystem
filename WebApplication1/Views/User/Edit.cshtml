@model WebApplication1.Models.TaskItems
@{
    ViewBag.Title = "Edit Task";
}
<h2 class="mb-4">Edit Your Task</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        <label>Title</label>
        <p class="form-control">@Model.Title</p>
    </div>

    <div class="form-group">
        <label>Previous Notes</label>
        <div class="form-control" style="height:150px;overflow-y:auto;background-color:#f8f9fa;white-space:pre-wrap;" readonly>
            @Html.Raw(Model.Note?.Replace("\n", "<br />"))
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Status")
        @Html.DropDownList("Status", (SelectList)ViewBag.StatusList, "-- Select Status --", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Add Note</label>
        @Html.TextBox("Note", "" , new { @class = "form-control", placeholder = "Enter your note here..." })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.EstimatedEndDate)
        @Html.TextBoxFor(m => m.EstimatedEndDate, new { @class = "form-control", type = "datetime-local" })
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-secondary ml-2" })
}

